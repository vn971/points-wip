<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%d{HH:mm:ss.SSS} %-5level [%thread] %logger{36} -
%msg%n</Pattern>
        </layout>
    </appender>

    <logger name="net.pointsgame.lift.snippet" level="info"/>
    <logger name="net.pointsgame.lift.api" level="info"/>
    <logger name="net.pointsgame.lift.model" level="info"/>
    <logger name="net.pointsgame.lift.comet" level="info"/>
    <logger name="net.pointsgame.lift.lib" level="info"/>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
