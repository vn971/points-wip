<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>%d{HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n
			</Pattern>
		</layout>
	</appender>

	<logger name="net.liftweb" level="info" />
	<logger name="net.liftweb.util.TimeHelpers" level="warn" />
	<logger name="bootstrap.liftweb" level="trace" />
	<logger name="net.pointsgame" level="trace" />

	<root level="info">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>
